<div class="page-header">
  <h1><%=t '.title', :default => Event.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>

      <th><%= Event.human_attribute_name(:name) %></th>
      <th><%= Event.human_attribute_name(:description) %></th>
      <th><%= Event.human_attribute_name(:start_date) %></th>
      <th><%= Event.human_attribute_name(:end_date) %></th>
      <th><%= Event.human_attribute_name(:created_by) %></th>
      <th><%= Event.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>

        <td><%= link_to event.name, event_path(event) %></td>
        <td><%= event.description %></td>
        <td><%= event.start_date %></td>
        <td><%= event.end_date %></td>
        <!-- put erb tags back if we want to keep line 26 -->
        <!-- <td>event.first_name.to_s + ' ' + event.last_name[0].to_s + '.'</td> -->
        <td><%= event.user.first_name + ' ' + event.user.last_name[0] + '.'%></td>
        <td><%= event.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_event_path(event), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      event_path(event),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_event_path,
            :class => 'btn btn-primary' %>
